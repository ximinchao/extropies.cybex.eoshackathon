<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:padding="10sp">

    <ImageView
        android:layout_width="20sp"
        android:layout_height="30sp"
        android:id="@+id/assetsListviewIcon"
        android:background="@mipmap/eth_icon"
        android:layout_marginStart="10sp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/assetsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="40sp"
        android:layout_toEndOf="@id/assetsListviewIcon"
        android:layout_centerVertical="true"
        android:text="ETH"
        android:textSize="18sp"
        android:textStyle="bold"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/assetsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="1.02000"
        android:textSize="17sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="15sp"
        />
    <TextView
        android:id="@+id/assetsValueInY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/assetsValue"
        android:text="~ 4181.00"
        android:textSize="12sp"

        android:layout_marginEnd="15sp"
        />

</RelativeLayout>